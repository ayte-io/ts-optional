{
  "compilerOptions": {
    "outDir": "build/distribution",
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "removeComments": false,
    "strictNullChecks": true,
    "declaration": true,
    "target": "es5",
    "lib": ["es2015"],
    "moduleResolution": "node"
  },
  "include": ["src"]
}
