{
  "name": "@ayte/optional",
  "version": "0.1.3",
  "main": "build/distribution/index.js",
  "repository": "git@github.com:ayte-io/ts-optional.git",
  "keywords": [
    "optional"
  ],
  "homepage": "https://github.com/ayte-io/ts-optional#readme",
  "license": "(MIT OR UPL-1.0)",
  "private": false,
  "files": [
    "build/distribution/**/*"
  ],
  "scripts": {
    "clean": "rm -rf build",
    "compile": "tsc",
    "lint": "eslint src",
    "test": "jest && rm -rf build/metadata/allure && mv allure-results build/metadata/allure",
    "test:report:allure": "allure generate -c -o build/report/allure -- build/metadata/allure",
    "coverage:publish": "cat build/metadata/coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "@ayte/conventions": "^1.0.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "allure-commandline": "^2.13.8",
    "coveralls": "^3.1.0",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "jest-allure": "^0.1.3",
    "jest-junit": "^12.0.0",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "types": "build/distribution/index.d.ts",
  "jest": {
    "testRegex": "/tests/.+\\.spec\\.ts",
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "collectCoverage": true,
    "coverageDirectory": "build/metadata/coverage",
    "reporters": [
      "default",
      "jest-junit",
      "jest-allure"
    ],
    "setupFilesAfterEnv": [
      "jest-allure/dist/setup"
    ]
  },
  "jest-junit": {
    "outputDirectory": "build/report/junit"
  }
}
